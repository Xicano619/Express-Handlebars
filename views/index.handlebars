<div class="container bg">


  <h1>Burger GRUB!!!</h1>


  <div class="row">
    <div class="center col-sm-12">
      <img src="/assets/images/burger.png" alt="Burger GRUB App">

    </div>
  </div>
  <!-- end .row -->
</div>


<div class="container">
  <img src="/assets/images/burger-background.jpg">

  <div class="row">
    <div class="col-md-6">
      
      <h3>Burgers I Love to Eat</h3>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <span><strong>{{> burgers/burger-block devoured=false}}</strong></span>
        {{/unless}} {{/each}}
        </ul>
      
    </div>
    <div class="col-md-6">
      
      <h3>Devoured Burgers</h3>
      <ul>
        {{#each burgers}} {{#if devoured}}
        <span><strong>{{> burgers/burger-block devoured=true}}</strong></span>
        {{/if}} {{/each}}
      </ul>
      
    </div>
  </div>

  {{!-- Add Burger --}}
  <div class="row">
    <div class="center col-sm-6">
      <h3>What kind of burger would you like?</h3>
      <form class="add-form">


        {{!-- Burger --}}
        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="burger_name">
          <button class="btn btn-warning" type="submit">Submit</button>
        </div>
      </form>
    </div>
  </div>

</div>