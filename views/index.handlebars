<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>



<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

{{!-- Add Form --}}
<form id="add">
    <h2>What kind of burger would you like?</h2>

    {{!-- Burger --}}
    <div class="form-group">
        <input type="text" class="form-control" name="burger_name" id="burger_name" placeholder="Got Burgers?">
        <button class="btn btn-warning" type="submit">Submit</button>
    </div>

    
</form>
